<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title">Keep notes with your playlist:</h5>
                <button type=" button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="row" id="notes">
                    <div class="col-md-4">.col-md-4
                        <button type="button">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    <div class="col-md-4">.col-md-4</div>
                    <div class="col-md-4">.col-md-4</div>
                </div>
                <hr>
                <form>
                    <div class="form-group">
                        <label for="note-title" class="col-form-label">Title:</label>
                        <input type="text" class="form-control" id="note-title">
                    </div>
                    <div class="form-group">
                        <label for="note" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="note"></textarea>
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button style="font-size: 22px;" type="button" class="btn btn-sm btn-outline-primary" data-dismiss="modal">Close</button>
                {{!-- this button will change on the update option --}}
                <button style="font-size: 22px;" type="button" class="btn btn-sm btn-outline-primary">Add Note</button>
            </div>

        </div>
    </div>
</div>


